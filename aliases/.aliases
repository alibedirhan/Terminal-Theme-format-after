# ==============================
# NAVİGASYON KISAYOLLARI
# ==============================

alias ..='cd ..'     
alias ...='cd ../..'
alias ....='cd ../../..' 
alias home='cd ~'

# ==============================
# SIK KULLANILANLAR
# ==============================

alias c='clear' 
alias h='history'
alias grep='grep --color=auto'
alias ugs='sudo apt update && sudo apt upgrade -y && sudo snap refresh'
alias ar='sudo apt autoremove'

# ==============================
# GÜVENLİ KOMUTLAR
# ==============================

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# ==============================
# GİT KOMUTLARI VE KISAYOLLARI
# ==============================

alias gst='git status'
alias gco='git checkout'
alias glg='git log --oneline --graph --all'
alias gp='git pull'
alias gph='git push'
alias gcam='git commit -am "commit mesajı giriniz"'
alias gundo='git reset --soft HEAD~1'
alias gstash='git stash --include-untracked'
alias grev='git revert HEAD'

# ==============================
# DOSYA VE KLASÖR İŞLEMLERİ
# ==============================

alias ffind='find . -type f -name '
alias ffolder='find . -type d -name '
alias recent='ls -lt | head'
alias cleanup='find . -type f -name "*.tmp" -delete'

# ==============================
# DİSK VE SİSTEM YÖNETİMİ
# ==============================

alias dfh='df -h | grep -v "tmpfs"'
alias dusage='du -sh * 2>/dev/null | sort -rh | head -n 10'
alias mnt='mount | column -t'
alias cdc='cd /mnt/c'

# ==============================
# AĞ VE İNTERNET KOMUTLARI
# ==============================

alias myip='curl -s ifconfig.me'
alias ports='netstat -tulnp'
alias flushdns='sudo systemd-resolve --flush-caches'
alias pingg='ping -c 4 google.com'

# ==============================
# SSH VE UZAK BAĞLANTI
# ==============================

alias sshconfig='nano ~/.ssh/config'
alias sshadd='eval "$(ssh-agent -s)" && ssh-add ~/.ssh/id_rsa'
alias vps='ssh user@your-vps-ip'
alias scpr='scp -r'

# ==============================
# KOMUT HATALARINI DÜZELTME
# ==============================

alias fix='fc -s'
alias redo='!!'
alias please='sudo !!'

# ==============================
# DOCKER VE KUBERNETES KOMUTLARI
# ==============================

alias dps='docker ps'
alias dstop='docker stop $(docker ps -q)'
alias drm='docker rm $(docker ps -a -q)'
alias k='kubectl'
alias kgp='kubectl get pods'
alias kgns='kubectl get namespaces'

# ==============================
# ZAMAN KAZANDIRAN KISAYOLLAR
# ==============================

alias mkdir='mkdir -pv'
alias untar='tar -xvf'
alias wgetr='wget -c'

# ==============================
# EĞLENCELİ VE KİŞİSEL ALIAS'LAR
# ==============================

alias clippy='echo "Bu işi halledebiliriz!"'
alias coffee='echo "Bir kahve molası zamanı!"'
alias fml='sudo shutdown -h now'

