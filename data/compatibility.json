{
  "desktop_environments": {
    "GNOME": {
      "display_name": "GNOME",
      "minimum_version": "3.36",
      "recommended_version": "45+",
      "tool": "gsettings",
      "supported_themes": [
        "arc",
        "yaru",
        "pop",
        "dracula",
        "nord",
        "catppuccin",
        "gruvbox",
        "tokyonight",
        "cyberpunk"
      ],
      "required_packages": [
        "gnome-tweaks",
        "gnome-shell-extensions"
      ],
      "optional_extensions": [
        "user-themes@gnome-shell-extensions.gcampax.github.com"
      ],
      "features": {
        "gtk_theme": true,
        "icon_theme": true,
        "cursor_theme": true,
        "shell_theme": true,
        "sound_theme": true,
        "color_accents": true
      },
      "configuration_paths": {
        "gtk_theme": "org.gnome.desktop.interface gtk-theme",
        "icon_theme": "org.gnome.desktop.interface icon-theme",
        "cursor_theme": "org.gnome.desktop.interface cursor-theme",
        "shell_theme": "org.gnome.shell.extensions.user-theme name",
        "wallpaper": "org.gnome.desktop.background picture-uri"
      },
      "notes": "GNOME requires User Themes extension for shell theme support"
    },
    
    "KDE": {
      "display_name": "KDE Plasma",
      "minimum_version": "5.20",
      "recommended_version": "5.27+",
      "tool": "kwriteconfig5",
      "supported_themes": [
        "arc",
        "yaru",
        "pop",
        "dracula",
        "nord",
        "catppuccin",
        "gruvbox",
        "tokyonight"
      ],
      "required_packages": [
        "kde-config-gtk-style",
        "plasma-workspace"
      ],
      "optional_packages": [
        "qt5-style-kvantum"
      ],
      "features": {
        "gtk_theme": true,
        "icon_theme": true,
        "cursor_theme": true,
        "plasma_theme": true,
        "color_scheme": true,
        "window_decoration": true
      },
      "configuration_paths": {
        "gtk_theme": "~/.config/gtk-3.0/settings.ini",
        "plasma_theme": "kwriteconfig5 --group Theme --key name",
        "color_scheme": "plasma-apply-colorscheme"
      },
      "notes": "KDE uses both native Plasma themes and GTK themes for app compatibility"
    },
    
    "XFCE": {
      "display_name": "XFCE",
      "minimum_version": "4.14",
      "recommended_version": "4.18+",
      "tool": "xfconf-query",
      "supported_themes": [
        "arc",
        "yaru",
        "pop",
        "dracula",
        "nord",
        "catppuccin",
        "gruvbox",
        "tokyonight",
        "cyberpunk"
      ],
      "required_packages": [
        "xfce4-settings"
      ],
      "optional_packages": [
        "xfce4-goodies"
      ],
      "features": {
        "gtk_theme": true,
        "icon_theme": true,
        "cursor_theme": true,
        "wm_theme": true,
        "notification_theme": true
      },
      "configuration_paths": {
        "gtk_theme": "xfconf-query -c xsettings -p /Net/ThemeName",
        "icon_theme": "xfconf-query -c xsettings -p /Net/IconThemeName",
        "wm_theme": "xfconf-query -c xfwm4 -p /general/theme"
      },
      "notes": "XFCE provides excellent GTK theme support with lightweight performance"
    },
    
    "MATE": {
      "display_name": "MATE",
      "minimum_version": "1.24",
      "recommended_version": "1.26+",
      "tool": "gsettings",
      "supported_themes": [
        "arc",
        "yaru",
        "pop",
        "dracula",
        "nord",
        "catppuccin",
        "gruvbox",
        "tokyonight",
        "cyberpunk"
      ],
      "required_packages": [
        "mate-tweak",
        "mate-themes"
      ],
      "optional_packages": [
        "mate-utils"
      ],
      "features": {
        "gtk_theme": true,
        "icon_theme": true,
        "cursor_theme": true,
        "marco_theme": true,
        "panel_theme": true
      },
      "configuration_paths": {
        "gtk_theme": "org.mate.interface gtk-theme",
        "icon_theme": "org.mate.interface icon-theme",
        "cursor_theme": "org.mate.peripherals-mouse cursor-theme",
        "marco_theme": "org.mate.Marco.general theme"
      },
      "notes": "MATE uses gsettings like GNOME but with MATE-specific schemas"
    },
    
    "Cinnamon": {
      "display_name": "Cinnamon",
      "minimum_version": "5.0",
      "recommended_version": "5.8+",
      "tool": "gsettings",
      "supported_themes": [
        "arc",
        "yaru",
        "pop",
        "dracula",
        "nord",
        "catppuccin",
        "gruvbox",
        "tokyonight",
        "cyberpunk"
      ],
      "required_packages": [
        "cinnamon-settings"
      ],
      "optional_packages": [
        "cinnamon-themes"
      ],
      "features": {
        "gtk_theme": true,
        "icon_theme": true,
        "cursor_theme": true,
        "cinnamon_theme": true,
        "panel_theme": true
      },
      "configuration_paths": {
        "gtk_theme": "org.cinnamon.desktop.interface gtk-theme",
        "icon_theme": "org.cinnamon.desktop.interface icon-theme",
        "cursor_theme": "org.cinnamon.desktop.interface cursor-theme",
        "cinnamon_theme": "org.cinnamon.theme name"
      },
      "notes": "Cinnamon is default DE for Linux Mint with excellent theme support"
    },
    
    "Budgie": {
      "display_name": "Budgie",
      "minimum_version": "10.5",
      "recommended_version": "10.7+",
      "tool": "gsettings",
      "supported_themes": [
        "arc",
        "yaru",
        "pop",
        "dracula",
        "nord",
        "catppuccin",
        "gruvbox",
        "tokyonight",
        "cyberpunk"
      ],
      "required_packages": [
        "budgie-desktop"
      ],
      "optional_packages": [
        "budgie-extras"
      ],
      "features": {
        "gtk_theme": true,
        "icon_theme": true,
        "cursor_theme": true,
        "budgie_theme": true
      },
      "configuration_paths": {
        "gtk_theme": "org.gnome.desktop.interface gtk-theme",
        "icon_theme": "org.gnome.desktop.interface icon-theme",
        "cursor_theme": "org.gnome.desktop.interface cursor-theme"
      },
      "notes": "Budgie uses GNOME-compatible gsettings for most configuration"
    }
  },
  
